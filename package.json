{
   "name": "salmichou-layette",
   "version": "1.0.0",
   "description": "Application de gestion de boutique de layette",
   "main": "electron/main.cjs",
   "type": "module",
   "scripts": {
      "dev": "vite",
      "build": "vite build",
      "preview": "vite preview",
      "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
      "electron:build": "npm run build && electron-builder",
      "electron:dist": "npm run build && electron-builder --publish=never",
      "electron:pack": "npm run build && electron-builder --dir"
   },
   "dependencies": {
      "pinia": "^2.1.0",
      "vite-plugin-pwa": "^1.0.3",
      "vue": "^3.5.22",
      "electron-is-dev": "^2.0.0",
      "vue-router": "^4.2.0"
   },
   "devDependencies": {
      "@types/workbox-window": "^5.0.0",
      "@vitejs/plugin-vue": "^4.6.2",
      "concurrently": "^8.0.0",
      "electron": "^25.9.8",
      "electron-builder": "^24.13.3",
     "typescript": "^5.0.0",
      "vite": "^4.5.14",
      "vite-plugin-pwa": "^0.16.0",
      "vue-tsc": "^1.4.0",
      "wait-on": "^7.0.0"
   },
   "build": {
      "appId": "com.salmichou.layette",
      "productName": "SalmichouLayette",
      "asar": false, 
      "directories": {
         "output": "release"
      },
      "files": [
        "node_modules/**/*",
        "package.json",
        "electron/main.cjs",
        "electron/preload.cjs"
      ],
      "extraFiles": [
        {
          "from": "dist",
          "to": ".",
          "filter": ["**/*"]
        }
      ],
      "extraResources": [
        {
          "from": "assets",
          "to": "assets"
        }
      ],      
      "mac": {
         "category": "public.app-category.business",
         "icon": "build/icon.icns"
      },
      "win": {
         "target": "nsis",
         "icon": "build/icon.ico"
      },
      "linux": {
         "target": "AppImage",
         "icon": "build/icon.png"
      },
      "nsis": {
         "oneClick": false,
         "allowToChangeInstallationDirectory": true
      }
   }
}
